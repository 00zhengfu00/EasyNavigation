<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义ViewPager+fragment实现-->
    <declare-styleable name="EasyNavigitionBar">
        <!--底部导航栏高度-->
        <attr name="navigitionHeight" format="dimension" />
        <!--底部导航栏背景-->
        <attr name="navigitionBackground" format="color" />
        <!--Tab字体大小-->
        <attr name="tabTextSize" format="dimension" />
        <!--Tab文字距Tab图标的距离-->
        <attr name="tabTextTop" format="dimension" />
        <!--Tab图标大小-->
        <attr name="tabIconSize" format="dimension" />
        <!--Tab未选中字体颜色-->
        <attr name="tabNormalColor" format="color" />
        <!--Tab选中字体颜色-->
        <attr name="tabSelectColor" format="color" />
        <!--提示红点的大小-->
        <attr name="hintPointSize" format="dimension" />
        <!--消息红点的大小-->
        <attr name="msgPointSize" format="dimension" />
        <!--提示红点距Tab图标的距离-->
        <attr name="hintPointLeft" format="dimension" />
        <!--消息红点距Tab图标的距离-->
        <attr name="msgPointLeft" format="dimension" />
        <!--提示红点距离顶部的距离-->
        <attr name="hintPointTop" format="dimension" />
        <!--消息红点距顶部的距离-->
        <attr name="msgPointTop" format="dimension" />
        <!--消息红点数字字体大小-->
        <attr name="msgPointTextSize" format="dimension" />
        <!--分割线高度-->
        <attr name="lineHeight" format="dimension" />
        <!--分割线颜色-->
        <attr name="lineColor" format="color" />


        <!--中间图片的大小-->
        <attr name="addImageSize" format="dimension" />
        <!--中间图片icon-->
        <attr name="addIconRes" format="integer" />
        <!--底部导航栏和加号的高度  加号会居中-->
        <attr name="addLayoutHeight" format="dimension" />
    </declare-styleable>

</resources>