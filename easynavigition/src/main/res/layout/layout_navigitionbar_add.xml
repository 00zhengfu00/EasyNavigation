<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.next.easynavigition.view.CustomViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></com.next.easynavigition.view.CustomViewPager>

    <include layout="@layout/common_horizontal_line" />


    <LinearLayout
        android:id="@+id/navigition_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--第一个Tab-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_icon_iv01"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/tab_text_tv01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:id="@+id/red_point01"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ll01"
                android:background="@drawable/oval_red"
                android:visibility="gone" />

            <TextView
                android:id="@+id/msg_point_tv01"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/ll01"
                android:background="@drawable/oval_red"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:visibility="gone" />


        </RelativeLayout>

        <!--第二个Tab-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_icon_iv02"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/tab_text_tv02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:id="@+id/red_point02"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ll02"
                android:background="@drawable/oval_red"
                android:visibility="gone" />

            <TextView
                android:id="@+id/msg_point_tv02"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/ll02"
                android:background="@drawable/oval_red"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:visibility="gone" />


        </RelativeLayout>

       <!-- Add-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/tab_add_iv"
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </RelativeLayout>



        <!--第三个Tab-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_icon_iv03"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/tab_text_tv03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:id="@+id/red_point03"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ll03"
                android:background="@drawable/oval_red"
                android:visibility="gone" />

            <TextView
                android:id="@+id/msg_point_tv03"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/ll03"
                android:background="@drawable/oval_red"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:visibility="gone" />


        </RelativeLayout>
        <!--第四个Tab-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_icon_iv04"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/tab_text_tv04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_icon04"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:id="@+id/red_point04"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ll04"
                android:background="@drawable/oval_red"
                android:visibility="gone" />

            <TextView
                android:id="@+id/msg_point_tv04"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/ll04"
                android:background="@drawable/oval_red"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:visibility="gone" />


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
